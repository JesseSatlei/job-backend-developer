{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "baseUrl": "src",
    "paths": {
      "@common/*": ["common/*"],
      "@domain/*": ["domain/*"],
      "@infra/*": ["infra/*"],
      "@modules/*": ["modules/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "test", "**/*spec.ts"]
}
